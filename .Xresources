xterm*faceName: DejaVu Sans Mono Book
xterm*faceNameDoublesize: WenQuanYi Micro Hei Mono
xterm*faceSize: 14
xterm*cjkWidth: flase
xterm*cursorBlink: true

! someone says 80 columns is not just a good idea, it is the law
xterm*vt100*geometry: 167x69

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
xterm*loginshell: true

! I like a LOT of scrollback...
xterm*savelines: 16384

! double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! right hand side scrollbar...
xterm*rightScrollBar: true
xterm*ScrollBar: true

! stop output to terminal from jumping down to bottom of scroll again
xterm*scrollTtyOutput: false

! set term explicitly
xterm*termName: xterm-256color

! make xterm interpret all incoming data as utf-8 encoded
xterm*locale: true

! fix the 'alt' key
xterm*eightBitInput: false
xterm*altSendEscape: true

! mouse selecting to copy, c-v to paste, c-p to print screen content to file
XTerm*VT100.Translations: #override \
    Ctrl <KeyPress> V: insert-selection(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    <BtnUp>: select-end(CLIPBOARD,PRIMARY,CUT_BUFFER0) \n\
    Ctrl <KeyPress> P: print() \n


